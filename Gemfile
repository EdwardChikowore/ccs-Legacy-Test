source 'http://rubygems.org'

ruby '2.7.4'

# Main gems for the test suite
gem 'capybara', '~> 3.35'
gem 'capybara-screenshot'
gem 'cucumber'
gem 'rspec'

# Webdriver related gems
gem 'selenium-webdriver'
gem 'webdrivers'

# Allows us to use site prism for selecting elements
gem 'site_prism', '~> 3.7'

# For running tests in parallel
gem 'parallel_tests'

# For accessibility testing
gem 'axe-core-capybara', '>= 4.1.0'
gem 'axe-core-cucumber', '>= 4.1.0'

# For debugging
gem 'pry'

# To enforce code styles
gem 'rubocop'
